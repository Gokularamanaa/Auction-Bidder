{
  "info": {
    "name": "AuctionBidder API - Auth checks",
    "_postman_id": "a1b2c3d4-e5f6-7890-abcd-ef0123456789",
    "description": "Minimal Postman collection to test /auth/register and /auth/login",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Gokul\",\n  \"email\": \"gokul@example.com\",\n  \"password\": \"secret123\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [ "{{baseUrl}}" ],
          "path": [ "auth", "register" ]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"gokul@example.com\",\n  \"password\": \"secret123\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [ "{{baseUrl}}" ],
          "path": [ "auth", "login" ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Try to parse JSON and save token to environment variable 'token'",
              "try {",
              "  var json = pm.response.json();",
              "  if (json.token) { pm.environment.set('token', json.token); }",
              "} catch (e) { console.log('No JSON response or parsing failed', e); }"
            ]
          }
        }
      ],
      "response": []
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" }
  ]
}
